{% extends 'base.html.twig' %}

{% block body %}
<div class="row" style="display: flex;align-items: center;justify-content: center;margin-top: 150px;">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-body">
                <a href="{{ path('app_e') }}"><i class="ri-arrow-left-circle-fill" style="font-size: 50px;"></i></a>
                <h5 class="card-title">Liste des evenements%</h5>

                <table class="table table-striped">
                    <thead>
                        <tr>
                            <td>ID</td>
                            <td>titre</td>
                            <td>description</td>
                            <td>date</td>
                            <td>lieu</td>
                            <th>image</th>
                            <th>suppression</th>
                            <th>edition</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for p in evenements %}
                        <tr>
                            <td>{{ p.id }}</td>
                            <td>{{ p.titre }}</td>
                            <td>{{ p.description }}</td>
                            <td>{{ p.date ? p.date|date('Y-m-d') : '' }}</td>
                            <td>{{ p.lieu }}</td>
                            <td>
                            {% if event.image is defined %}
                            <img src="{{ asset('uploads/' ~ event.image) }}" width="250" height="150">
                        {% else %}
                            No Image
                        {% endif %}
                             </td>

                             <td>
                                <a href="{{ path('deleteEvent', {'id': p.id}) }}" class="btn btn-danger btn-sm">Supprimer</a>
                            </td>
                            <td>
                                <a href="{{ path('updateEvent', {'id': p.id}) }}" class="btn btn-primary btn-sm">Modifier</a>
                            </td>
                            <td>
                                <a href="{{ path('showEvent', {'id': p.id}) }}" class="btn btn-info btn-sm">Show</a>
                            </td>
                            
                            
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
